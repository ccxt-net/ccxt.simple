<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<AssemblyName>CCXT.Simple</AssemblyName>
		<RootNamespace>CCXT.Simple</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<Title>CryptoCurrency eXchange Trading Library for .NET</Title>
		<Product>CCXT</Product>
		<Company>ODINSOFT</Company>
		<Description>CCXT.SIMPLE – CryptoCurrency eXchange Trading Library for .NET</Description>
		<Copyright>Copyright OdinSoft Co., Ltd. 2015~2024</Copyright>
		<AssemblyTitle>CCXT.SIMPLE</AssemblyTitle>
		<Authors>SEONGAHN LEE</Authors>
		<PackageId>CCXT.SIMPLE</PackageId>
		<PackageTags>bitcoin;cryptocurrency;exchange;trading;market-data;ccxt;exchange-markets;altcoin;api;arbitrage;bot;crypto;e-commerce;invest;library;strategy;trade;merchant;cryptocoin</PackageTags>
		<PackageProjectUrl>https://github.com/ccxt.net/ccxt.simple</PackageProjectUrl>
		<PackageIcon>ccxt.simple.api.png</PackageIcon>
		<GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
		<GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
		<GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Version>1.1.6</Version>
		<AssemblyVersion>1.1.6.0</AssemblyVersion>
		<FileVersion>1.1.6.0</FileVersion>
		<PackageReleaseNotes>Major API standardization release - Added 15 standardized exchange functions with unified interface across all 16 supported exchanges</PackageReleaseNotes>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<RepositoryUrl>https://github.com/ccxt.net/ccxt.simple</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<ApplicationIcon>ccxt.simple.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
	  <Content Include="ccxt.simple.ico" />
	  <None Include="..\docs\ccxt.simple.api.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="GraphQL.Client" Version="6.1.0" />
		<PackageReference Include="GraphQL.Client.Serializer.SystemTextJson" Version="6.1.0" />
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.13.0" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Exchanges\Bithumb\CoinState.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="Exchanges\Upbit\CoinState.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
